@{
    ViewData["Title"] = "Historia";
    var historiaZdarzen = HistoriaModel.GetHistoriaZdarzen();
}



<div class="card mb-3 border-dark">
    <div class="card-header border-dark">Historia zagrożeń</div>
    <div class="card-body">
        <div class="card-text">

            <table id="id_historia" class="table table-bordered table-sm">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Aktualna nazwa kamery</th>
                        <th scope="col">Nazwa pola</th>
                        <th scope="col">Historyczna nazwa kamery</th>
                        <th scope="col">Długość geograficzna</th>
                        <th scope="col">Szerokość geograficzna</th>
                        <th scope="col">Data zdarzenia</th>
                        <th scope="col">Zdjęcie zdarzenia</th>
                        <th scope="col">Podglad online</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var zdarzenie in historiaZdarzen)
                        {
                    <tr>
                        <td>@zdarzenie.id</td>
                        <td>@zdarzenie.aktualnaNazwaKamery</td>
                        <td>@zdarzenie.nazwaPola</td>
                        <td>@zdarzenie.historycznaNazwaKamery</td>
                        <td>@zdarzenie.geolat</td>
                        <td>@zdarzenie.geolon</td>
                        <td>@zdarzenie.dataZdarzenia</td>
                        <td></td>
                        <td>
                            <a asp-action="Index" class="btn btn-primary">
                                Zobacz online
                            </a>
                        </td>
                    </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>

    @section AddToHead
        {
        <link rel="stylesheet" href="~/css/datepicker.min.css" />
    }

@section Scripts
    {
    <script>

        $('#id_historia').DataTable({
            "language": {
                "url": "@Url.Content("~/js/DataTablePolish.json")"
            }

        });
    </script>
}